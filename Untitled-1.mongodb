db.conversations.aggregate([
    {
        $match: {
            "members.userId":{$in:["1EfO2PTTDdXERqjfA7scc7tL1X22"]}
        },
    },
    {
        $lookup: {
            from: 'messages',
            localField: 'lastMessageId',
            foreignField: '_id',
            as: 'lastMessage',
        },
    },
    {
        $lookup: {
            from: 'members',
            localField: '_id',
            foreignField: 'conversationId',
            as: 'mb',
        },
    },
    {
        $unwind: "$mb",
    },
    {
        $match: {
            "mb.userId":"1EfO2PTTDdXERqjfA7scc7tL1X22"
        },
    },
    {
        $project: {
            name: 1,
            avatar: 1,
            lastMessage: {
                userId: 1,
                content: 1,
                type: 1,
                updatedAt: 1,
            },
            mb:{
                numberUnread:1,
            },
            type: 1,
        }
    },
    
    
    {
      $sort: {
        "lastMessage.updatedAt": -1,
      },
    },
    {
        $skip: 0,
    },
    {
        $limit: 20,
    },
    
])

